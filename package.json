    "jest-mock-extended": "^3.0.5",
    "msw": "^2.2.1",
    "nock": "^13.5.4",
    "@percy/cli": "^1.28.7",
    "playwright-lighthouse": "^4.0.0",
    "postcss": "^8.4.38",
    "supabase": "^2.33.5",
    "supertest": "^6.3.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2"
  }
}
