{
  "name": "field-reservations",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:component": "jest --testPathPattern=__tests__/components",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:performance": "playwright test --grep @performance",
    "test:accessibility": "playwright test --grep @accessibility",
    "test:visual": "playwright test --grep @visual",
    "test:security": "jest --testPathPattern=__tests__/security",
    "test:contract": "jest --testPathPattern=__tests__/contract",
    "test:load": "k6 run tests/load/load-test.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:component && npm run test:e2e && npm run test:security",
    "test:smoke": "playwright test tests/e2e/smoke.spec.ts",
    "ci:test": "npm run lint && npm run typecheck && npm run test:coverage",
    "ci:e2e": "playwright test --reporter=json",
    "deploy:preview": "vercel",
    "deploy:staging": "vercel --prod --scope=$VERCEL_ORG_ID",
    "deploy:production": "vercel --prod --scope=$VERCEL_ORG_ID",
    "db:migrate": "supabase db push",
    "db:migrate:dry": "supabase db push --dry-run",
    "db:backup": "supabase db dump > backup-$(date +%Y%m%d-%H%M%S).sql",
    "monitor:sentry": "sentry-cli releases new -p $SENTRY_PROJECT",
    "audit:security": "npm audit --audit-level=moderate",
    "audit:licenses": "license-checker --production --summary",
    "bundle:analyze": "ANALYZE=true next build",
    "prepare": ""
  },
  "dependencies": {
